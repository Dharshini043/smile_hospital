<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view -->
    <record id="view_smile_lab_tree" model="ir.ui.view">
        <field name="name">smile.lab.tree</field>
        <field name="model">smile.lab</field>
        <field name="arch" type="xml">
            <list>
                <field name="patient_id"/>
                <field name="date_sent"/>
                <field name="mode_sent"/>
                <field name="work_type"/>
                <field name="accessories_sent"/>
                <field name="work_received"/>
                <field name="patient_delivered"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_smile_lab_form" model="ir.ui.view">
        <field name="name">smile.lab.form</field>
        <field name="model">smile.lab</field>
        <field name="arch" type="xml">
            <form string="Lab">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="lab_id"/>
                        <field name="date_sent"/>
                        <field name="mode_sent"/>
                    </group>
                    <group>
                        <field name="work_type"/>
                        <field name="accessories_sent"/>
                    </group>
                    <group>
                        <field name="work_received"/>
                        <field name="patient_delivered"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_smile_lab" model="ir.actions.act_window">
        <field name="name">Lab</field>
        <field name="res_model">smile.lab</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a lab record
            </p>
        </field>
    </record>

    <!-- Menu item -->

    <menuitem id="menu_hospital_lab"
              name="Lab"
              parent="hospital_root_menu"
              action="action_smile_lab"
              sequence="10"/>
</odoo>
