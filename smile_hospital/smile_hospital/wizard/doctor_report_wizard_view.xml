<odoo>
    <record id="view_doctor_report_wizard" model="ir.ui.view">
        <field name="name">doctor.report.wizard.form</field>
        <field name="model">doctor.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Doctor Report">
                <group>
                    <field name="doctor_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button string="Print PDF" type="object" name="action_print_pdf" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_doctor_report_wizard" model="ir.actions.act_window">
        <field name="name">Doctor Report</field>
        <field name="res_model">doctor.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Doctor Report Menu (unique id, same Reports parent) -->
    <menuitem id="menu_doctor_report_wizard"
              name="Doctor Report"
              parent="menu_hospital_reports"
              action="action_doctor_report_wizard"
              sequence="2"/>
</odoo>
