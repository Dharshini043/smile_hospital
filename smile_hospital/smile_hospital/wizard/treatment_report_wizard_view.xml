<odoo>
    <record id="view_treatment_report_wizard_form" model="ir.ui.view">
        <field name="name">treatment.report.wizard.form</field>
        <field name="model">treatment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Treatment Report">
                <group>
                    <field name="treatment_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button name="action_print_pdf" string="Print PDF" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_treatment_report_wizard" model="ir.actions.act_window">
        <field name="name">Treatment Report</field>
        <field name="res_model">treatment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

     <!-- Root Menu -->
    <menuitem id="hospital_root_menu" name="Dental Clinic" sequence="1"/>

    <!-- Reports Submenu -->
    <menuitem id="menu_hospital_reports"
              name="Reports"
              parent="hospital_root_menu"
              sequence="7"/>

    <!-- Treatment Report Menu -->
    <menuitem id="menu_treatment_report_wizard"
              name="Treatment Report"
              parent="menu_hospital_reports"
              action="action_treatment_report_wizard"
              sequence="1"/>
</odoo>
