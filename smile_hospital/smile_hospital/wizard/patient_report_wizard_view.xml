<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action -->
    <record id="action_patient_report_wizard" model="ir.actions.act_window">
        <field name="name">Patient Report</field>
        <field name="res_model">patient.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_patient_report_wizard"
              name="Patient Information Report"
              parent="menu_hospital_reports"
              action="action_patient_report_wizard"
              sequence="3"/>

    <!-- Wizard Form -->
    <record id="view_patient_report_wizard_form" model="ir.ui.view">
        <field name="name">patient.report.wizard.form</field>
        <field name="model">patient.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Patient Report">
                <group>
                    <field name="patient_id"/>
                </group>
                <footer>
                    <button name="action_print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
