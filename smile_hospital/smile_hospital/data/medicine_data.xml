<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Paracetamol -->
    <record id="product_medicine_paracetamol" model="product.template">
        <field name="name">Paracetamol 500mg</field>
        <field name="is_medicine">True</field>
        <field name="generic_name">Paracetamol</field>
        <field name="dosage_strength">500</field>
        <field name="type">consu</field> <!-- consumable product -->
        <field name="sale_ok">True</field>
        <field name="purchase_ok">True</field>
        <field name="is_storable">True</field>
        <field name="list_price">2.50</field> <!-- sale price -->
    </record>

    <!-- Amoxicillin -->
    <record id="product_medicine_amoxicillin" model="product.template">
